---
// Component Imports


import BaseLayout from '../layouts/BaseLayout.astro';

import PageHeader from '../components/PageHeader.astro';



import AboutTeam from '../components/AboutTeam.astro';

import AboutStudio from '../components/AboutStudio.astro';

import AboutFaqs from '../components/AboutFaqs.astro';

// import heroImage from '/src/images/hero-services.jpg';
// import Button from "../components/Button.astro";

// const {className, href} = Astro.props;

let hasHero = true;

let title = 'About Sweet Strength';
let description =
	'This is a starter repo for an blog built with Astro including open graph tags, canonical urls, RSS, sitemap support.';

let permalink = 'https://sweetstrength.com/about-us';

// import "../styles/main.css";
// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout
	{hasHero}
	{title}
	{description}
	{permalink}
	canonicalURL={Astro.canonicalURL.href}
>
	<PageHeader
		title="About Us" subtitle="Who We Are, Our Studio, and FAQs"
		heroImage="/src/images/hero-about-alt.jpg"
		heroImageAlt="Breeze and Linda Timmons standing in front of Sweet Strength Fitness Studio"
	/>

	<section class="about">
		<div data-tab-component>
			<ul class="tab-list">
				<li class="tab-item">
					<a class="tab-link" href="#section-who-we-are">Who We Are</a>
				</li>
				<li class="tab-item">
					<a class="tab-link" href="#section-the-studio">The Studio</a>
				</li>
				<li class="tab-item">
					<a class="tab-link" href="#section-faqs">FAQs</a>
				</li>
			</ul>

			<section id="section-who-we-are" class="tab-panel">
				<AboutTeam />
			</section>

			<section id="section-the-studio" class="tab-panel">
			
				<AboutStudio />
			</section>

			<section id="section-faqs" class="tab-panel">
				<AboutFaqs />
			</section>
		</div>
	</section>
</BaseLayout>



<script>
import "@scripts/tabs.js"
</script>

<style>
	
	/* tabs */

	[role='tablist'] {
		position: sticky;
		top: 0;
		z-index: 5;
		background: var(--color-primary);
		padding: 0;
		margin: 0;
		display: flex;
		flex-wrap: nowrap;
		
		overflow-x: auto;
		@media (--viewport-xs) {
			justify-content: center;
		}
	}

	/* [role='tablist'] li {
		flex: 1 1 100%;
	} */

	[role='presentation'] {
		display: block;
		flex: 1 0 auto;
		max-width: 15rem;
		font-family: var(--font-headline);
		text-transform: uppercase;
	
	}

	[role='presentation']:not(:first-child) {
			border-left: var(--border-width-xs) solid var(--color-primary-lite);
		
	}

		[role='tab'] {
		/*   border: 3px solid transparent; */
		color: var(--color-lite);
	text-align: center;
		display: block;
		padding: var(--s0) var(--s2);
		font-size: var(--s2);
		position: relative;
		text-decoration: none;
		transition: all 100ms cubic-bezier(0.42, 0, 1, 1);
	}

	

	[data-tab-active] [role='tab'] {
		background: var(--color-white);
		color: var(--color-primary-dark);
		transition: all 100ms cubic-bezier(0.42, 0, 1, 1);
	}



	[role='tab']:focus-within {
		outline: 0;
		background-color: var(--color-white);
		box-shadow: inset 0 0 0 var(--border-width-sm) var(--color-white);
		color: var(--color-primary-dark);
	}

	[role='tabpanel'] {
		padding: 0;
	}

	/* [role='tabpanel'] h2 {
		margin-top: 0;
	} */

	[role='tabpanel'][aria-hidden='true'] {
		display: none;
	}

	/* [role='tabpanel']:focus {
		outline: 0;
		box-shadow: inset 0 0 0 2px #036800;
	} */

	@media screen and (min-width: 800px) {
		[role='presentation'] {
			display: inline-block;
		}


	}
</style>
