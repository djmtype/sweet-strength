<style>
  .section-about {
    /* background: url("/assets/bg-gym.jpg") no-repeat 50% 50%; */
    background-repeat: no-repeat;
    background-position: 50% 50%;
    background-color: var(--color-dark);
    background-size: cover;
    background-attachment: fixed;
    color: var(--color-lite);
  }

</style>
